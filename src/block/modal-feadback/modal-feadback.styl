@keyframes showModalFeadback
	from
		opacity 0
	to
		opacity 1
		
@keyframes hiddenModalFeadback
	from
		opacity 1
		z-index 10
	to
		opacity 0
		z-index -10

.modal-feadback
	z-index -10
	opacity 0
	display flex
	justify-content center
	align-items center
	width 100%
	height 100%
	position fixed
	top 0
	background rgba(0, 0, 0, .5)
	&__box
		position relative
		display flex
		flex-direction column
		justify-content center
		align-items stretch
		background #fff
		padding 80px 160px
	&__close
		font-size 25px
		position absolute
		top 10px
		right 10px
		cursor pointer
			
// показать форму
.modal-feadback.active
	opacity 1
	z-index 10
	animation showModalFeadback 1s
	
.modal-feadback.close
	animation hiddenModalFeadback 1.5s


@media tablet
	.modal-feadback
		&__box
			padding 40px 20px