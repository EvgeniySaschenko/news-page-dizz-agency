.header
	height 560px
	background-image url(../img/header-bg.png)
	background-position center
	background-repeat no-repeat
	.row_1
		display flex
		flex-wrap wrap
		align-items center
		margin-bottom 55px
		padding-top 25px
		.col_1
			margin-right 55px
		.col_2
			margin-right 55px

	.row_2
		display flex
		justify-content center
		margin-bottom 140px
	.row_3
		display flex
		justify-content center
		margin-bottom 40px
	.row_4
		display flex
		justify-content flex-end
		
@media tablet
	.header
		.row_1
			.col_1
				width 50%
				margin-right 0
			.col_2
				display flex
				justify-content center
				order 3
				width 100%
				margin-top 20px
				margin-right 0
			.col_3
				display flex
				justify-content flex-end
				order 2
				width 50%
		
@media phone
	.header
		.row_1
			.col_2
				justify-content flex-end
		.row_2
			margin-bottom 90px
		.row_4
			justify-content center
	