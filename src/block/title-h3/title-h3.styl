.page_article
	.title-h3
		&_sidebar
			background corpColor
			font-size 18px
			padding 30px 0 30px 20px
			color #fff
			width 100%
			box-sizing border-box
			
.page_all-news
	.title-h3
		&_sidebar
			font-size 18px
			margin-top 60px
			margin-bottom 30px
			h3
				display flex
				align-items center
				&::after
					content ""
					display block
					width 100%
					border-top 2px solid #bababa
					margin-left 25px

			
.service
	.title-h3
		&_service
			font-size 50px
			font-family Georgia
			color #fff
			text-align center
			margin-bottom 70px
			text-transform uppercase
			h3
				display flex
				align-items center
				&::after
				&::before
					content ""
					display block
					width 100%
					border-bottom 1px solid #fff
				&::after
					margin-left 35px
				&::before
					margin-right 35px