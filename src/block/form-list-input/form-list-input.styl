.header
	.form-list-input
		&_searsh
			width 70%
			position relative
			.form-list-input
				&__input[placeholder="Searsh"]
					height 32px
					width 100%
					background-color rgba(254, 254, 254, 0.2)
					padding-left 20px
					border 1px solid #fff
					color #fefefe
					&::placeholder
						color #fff
					&:focus
						outline 0
						outline-offset 0
				&__btn
					border none
					background none
					&::after
						content ""
						position absolute
						top 10px
						right 20px
						dislpay inline-block
						background-image url(../img/sprite.png)
						background-position -21px -20px
						width 16px
						height 16px
						cursor pointer
						
.modal-feadback
	.form-list-input
		&_modal-feadback
			width 100%
			display flex
			justify-content center
			align-items center
			font-size 15px
			.form-list-input
				&__input
					display: inline-block
					margin-right: 10px
					margin-bottom 0
					width 200px
					height 38px
					padding 0 19px
					font-weight bold
					color #a2a2a2
					&::placeholder
						color #a2a2a2
					&:focus
						outline 0
						outline-offset 0
				&__btn
					background corpColor
					border 1px solid corpColor
					width 200px
					height 40px
					text-align center
					font-weight bold
					text-transform uppercase
					color #fefefe
				
@media tablet
	.modal-feadback
		.form-list-input
			&_modal-feadback
				flex-direction column
				.form-list-input
					&__input
						margin-bottom 10px

	