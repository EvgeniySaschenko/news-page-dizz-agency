.footer
	padding-top 100px
	padding-bottom 100px
	background-color #f5f5f5
	font-size 13px
	color #a2a2a2
	.col
		width 33%
		&_3
			text-align right
			.box
				text-align left
				display inline-block
	.row_1
		display flex
		justify-content space-between
		margin-bottom 55px
	.row_2
		display flex
		justify-content space-between
		

		
@media phone
	.footer
		.row
			flex-wrap wrap
			justify-content center
			flex-direction column
			align-items center
			margin-bottom 0
			.col
				display flex
				justify-content center
				flex-direction column
				align-items center
				width 100%
				.box
					display flex
					justify-content center
					flex-direction column
					align-items center