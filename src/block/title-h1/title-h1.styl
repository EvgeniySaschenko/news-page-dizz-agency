.page_article
	.title-h1
		&_title-page
			width 100%
			font-size 20px
			font-weight bold
			color corpColor
			margin-bottom 70px
			display flex
			align-items center
			white-space nowrap
			h1
				padding-right 40px
			&::after
				content ""
				display block
				width 100%
				border-bottom 1px solid #000
				
.page_all-news
	.title-h1
		&_content
			font-size 50px
			font-family Georgia
			color #000
			text-align center
			margin-bottom 70px
			text-transform uppercase
			h1
				display flex
				align-items center
				white-space nowrap
				&::after
				&::before
					content ""
					display block
					width 100%
					border-bottom 1px solid #000
				&::after
					margin-left 35px
				&::before
					margin-right 35px
					
@media phone
	.page_article
		.title-h1
			&_title-page
				font-size 15px
				h1
					white-space normal
				&::after
					display none
			
	.page_all-news
		.title-h1
			&_content
				font-size 30px