.page_article
	.list-brief
		&_sidebar
			.list-brief
				&__item
					min-width 300px
					box-sizing border-box
					background #f4f4f4
					padding 30px 20px
					color #818181
					line-height 1.4
					text-align justify
					font-size 14px
					margin-bottom 3px
				&__name
					display inline-block
					width 60%
				&__link_name
					color #000
					&:hover
						color corpColor
				&__date
					display inline-block
					width 40%
					margin-bottom 10px
					text-align right
				&__text
					display inline
				&__link_more
					display inline
					padding-left 5px
					text-decoration underline
					
.page_all-news
	.list-brief
		&_content
			margin-right 60px
			margin-bottom 40px
			.list-brief
				&__item
					padding 35px 0
					box-sizing border-box
					display flex
					flex-wrap wrap
					justify-content space-between
					border-bottom 1px solid #a8a8a8
				&__name
					font-size 16px
					font-weight bold
					max-width 700px
					line-height 1.5
				&__date
					color #a8a8a8
				&__text
					width 100%
					line-height 1.5
					margin-top 30px

	.list-brief
		&_sidebar
			width 300px
			.list-brief
				&__item
					margin-bottom 30px
					box-sizing border-box
				&__name
					background corpColor
					text-transform uppercase
					padding 30px 15px 30px 30px
					line-height 1.5
				&__link_name
					font-size 14px
					color #fff
				&__text
					margin-top 22px
					box-sizing border-box
					border 1px solid corpColor
					padding 30px 15px 30px 30px
					line-height 1.3
					color #9f9f9f
					position relative
					&::before
						content ""
						position absolute
						left 50%
						top -16px
						margin-left -10px
						border-bottom 16px solid corpColor
						border-left 10px solid transparent
						border-right 10px solid transparent
					&::after
						content ""
						position absolute
						left 50%
						top -14px
						margin-left -9px
						border-bottom 15px solid #fff
						border-left 9px solid transparent
						border-right 9px solid transparent
						z-index 2
				&__link_more
					text-transform uppercase
					display block
					margin-top 10px
					&::after
						content ""
						display inline-block
						background-image url(../img/sprite.png)
						background-position -8px -48px
						width 8px
						height 12px
						margin-left 10px
						

.service
	.list-brief
		&_service
			display flex
			justify-content space-between
			.list-brief
				&__item
					box-sizing border-box
					padding 50px 60px
					width 370px
					min-width 300px
					background rgba(32, 141, 189, .4)
					font-size 13px
					line-height 1.5
					text-align justify
				&__name
					text-align center
					padding-bottom 30px
					border-bottom 1px solid #91aebd
				&__text
					margin-top 30px
					color #fff
					margin-bottom 10px
				&__link_name
					color #fff
					font-weight bold
					font-size 15px
				&__link_more
					display block
					text-decoration underline
					
@media tablet
	.page_all-news
		.list-brief
			&_content
				margin-right 0
				
	.service
		.list-brief
			&_service
				display flex
				flex-direction column
				justify-content center
				align-items center
				.list-brief
					&__item
						width auto
						padding 20px
						text-align center
						border-bottom 1px solid #91aebd
						&:last-child
							border 0
					&__name
						padding-bottom 10px
						border 0
					&__text
						font-size 0
						margin 0
					&__link_more
						font-size 14px
						
						

	.page_all-news
		.list-brief
			&_sidebar
				width 100%
				display flex
				flex-wrap wrap
				justify-content space-between

					
@media phone
	.page_all-news
		.list-brief
			&_content
				.list-brief
					&__name
						font-size 14px
					&__date
						text-align right
						width 100%
						margin-top 10px
		